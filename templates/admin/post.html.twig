{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="w-50 mx-auto mt-5">
        <div class="mb-3">
            <label class="form-label">{{ form_label(form.text) }}</label>
            {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
            <div>{{ form_errors(form.text) }}</div>
        </div>
        <div class="mb-5">
            <label class="form-label">{{ form_label(form.alias) }}</label>
            {{ form_widget(form.alias, {'attr': {'class': 'form-control'}}) }}
            <div class="alert-danger mt-1">{{ form_errors(form.alias) }}</div>
        </div>
        <div class="mb-3">
            {{ form_widget(form.submit, {'attr': {'class': 'form-control btn btn-primary'}}) }}
        </div>
        <div class="visually-hidden">
            {{ form_widget(form.created_at) }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock  %}